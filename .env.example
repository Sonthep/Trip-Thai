# Site Configuration
NEXT_PUBLIC_SITE_URL=https://tripthai.app

# Google Analytics 4
# Get your Measurement ID from https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email sender (must be verified domain in Resend)
RESEND_FROM_EMAIL=TripThai <hello@yourdomain.com>

# Admin email for lead notifications (optional)
ADMIN_EMAIL=admin@yourdomain.com

# ── NextAuth / Social Login ──────────────────────────────────────
# Generate a random secret: openssl rand -base64 32
AUTH_SECRET=your-random-secret-here

# LINE Developers Console → LINE Login Channel
# https://developers.line.biz/console/
LINE_CHANNEL_ID=xxxxxxxxxxxxxxxxxx
LINE_CHANNEL_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Callback URL: https://tripthai.app/api/auth/callback/line

# Google Cloud Console → OAuth 2.0 Client
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=xxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxxxxx
# Authorized redirect URI: https://tripthai.app/api/auth/callback/google

# Facebook Developers → App → Facebook Login
# https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=xxxxxxxxxxxxxxxx
FACEBOOK_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Valid OAuth Redirect URI: https://tripthai.app/api/auth/callback/facebook

